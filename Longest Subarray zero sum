#include <bits/stdc++.h>

int LongestSubsetWithZeroSum(vector < int > arr) {
  int n=arr.size();
  int ans=0, sum=0;
  map<int, int> hash;
  for(int i=0;i<n;i++){
    sum+=arr[i];
    if(sum==0){
      ans=max(ans, i+1);
    }
    else if(hash[sum]!=0){
      ans=max(i+1-hash[sum], ans);
    }
    else
    hash[sum]=i+1;
  }
  return ans;
}
